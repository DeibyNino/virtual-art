---
import Footer from "@/components/Footer.astro";
import Navbar from "@/components/Navbar.astro";
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="PixelFox" />
    <meta
      name="keywords"
      content="pintura al óleo, arte en óleo, cuadros al óleo, técnicas de pintura al óleo, comprar pintura al óleo, venta de arte al óleo, clases de pintura al óleo, tutoriales de pintura al óleo, materiales para pintura al óleo, obras de arte al óleo, artistas de pintura al óleo, galerías de arte al óleo, retratos al óleo, paisajes al óleo, bodegones al óleo, exposiciones de pintura al óleo, arte contemporáneo al óleo, restauración de pintura al óleo, cómo pintar al óleo, consejos para pintura al óleo, inspiración para pintura al óleo, arte y pintura al óleo, cursos de pintura al óleo, maestros de la pintura al óleo, estilos de pintura al óleo, pintura realista al óleo, pintura abstracta al óleo, arte figurativo al óleo, historia de la pintura al óleo."
    />

    <title>{title}</title>
  </head>

  <body class="flex flex-col">
    <Navbar />
    <main class="">
      <slot />
      <button
        class="fixed bottom-4 right-4 bg-blue-950 p-4 rounded-full text-white text-xl shadow-md hover:shadow-sm hover:shadow-white focus:outline-none focus:ring-2 focus:ring-blue-950 focus:ring-opacity-50"
        onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
      >
        <Icon name="ArrowTop" />
      </button>
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #0f1341;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
