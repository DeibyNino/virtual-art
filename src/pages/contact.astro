---
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import snow from "@/assets/images/obras/snow.jpg";
---

<Layout title="Contactame">
  <div class="flex flex-col items-center justify-center min-h-[100vh] bg-white">
    <div
      class="w-full overflow-hidden z-10 grid grid-cols-1 lg:grid-cols-2 pt-20 lg:pt-0"
    >
      <div class="relative h-[60vh] lg:h-screen lg:pt-28">
        <Image
          src={snow}
          alt="Contact to me"
          class="absolute w-full h-full object-cover object-center z-10"
        />
        <div
          class="absolute bg-blue-950 w-full h-full flex items-center justify-center bg-opacity-10 z-20"
        >
        </div>
      </div>
      <div class="flex items-center justify-center pb-8 pt-12 lg:pt-28 px-8">
        <div class="flex flex-col">
          <h1 class="text-4xl font-bold">Contáctame</h1>
          <p class="text-7xl"></p>
          <p class="mt-4 lg:w-2/3 text-lg font-bold">
            Si deseas contactarme, puedes hacerlo a través de mis redes
            sociales, WhatsApp o enviarme un correo electrónico.
          </p>
          <div class="flex flex-col gap-1 lg:gap-2 lg:text-2xl">
            <a
              href="htpp://www.facebook.com/VirtualArt"
              target="_blank"
              class="text-blue-950 flex gap-8 items-center hover:text-white hover:bg-blue-950 transition-all ease-in-out duration-200 p-2 rounded-md"
            >
              <Icon name="facebook" class="" /> Facebook
            </a>
            <a
              href="https://www.instagram.com/virtual_art1/"
              target="_blank"
              class="text-blue-950 flex gap-8 items-center hover:text-white hover:bg-blue-950 transition-all ease-in-out duration-200 p-2 rounded-md"
            >
              <Icon name="instagram" class="" /> Instagram
            </a>
            <a
              href="https://www.tiktok.com/@roymarquezangarit"
              target="_blank"
              class="text-blue-950 flex gap-8 items-center hover:text-white hover:bg-blue-950 transition-all ease-in-out duration-200 p-2 rounded-md"
            >
              <Icon name="tiktok" class="" /> TikTok
            </a>

            <a
              href="mailto:roymarquezangarita@gmail.com"
              class="text-blue-950 flex gap-8 items-center hover:text-white hover:bg-blue-950 transition-all ease-in-out duration-200 p-2 rounded-md"
            >
              <Icon name="Email" class="" />
              roymarquezangarita@gmail.com
            </a>
            <a
              href="mailto:roymarquezangarita@gmail.com"
              class="text-blue-950 flex gap-8 items-center hover:text-white hover:bg-blue-950 transition-all ease-in-out duration-200 p-2 rounded-md"
            >
              <Icon name="WhatsApp" class="" />
              310 3821457
            </a>
          </div>
        </div>
      </div>
    </div>
  </div></Layout
>
