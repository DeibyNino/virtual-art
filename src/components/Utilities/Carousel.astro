<div class="slider">
  <div class="slide-track">
    <div class="slide">
      <Image src={imagen1} alt="imagen1" />
    </div>
    <div class="slide">
      <Image src={imagen2} alt="imagen1" />
    </div>
    <div class="slide">
      <Image src={imagen3} alt="imagen1" />
    </div>
    <div class="slide">
      <Image src={imagen4} alt="imagen1" />
    </div>
    <div class="slide">
