    </div>
    <div class="slide">
      <Image src={imagen4} alt="imagen1" />
    </div>
    <div class="slide">
      <Image src={imagen5} alt="imagen1" />
    </div>
    <div class="slide">
      <Image src={imagen6} alt="imagen1" />
    </div>
    <div class="slide">
      <Image src={imagen7} alt="imagen1" />
    </div>
  </div>
</div>

<style>
  .slider {
    width: 75vw;
    overflow: hidden;
    margin: auto;
    height: auto;
  }

  .slider .slide-track {
    display: flex;
    gap: 4rem;
    animation: scroll 40s linear infinite;
    --webkit-animation: scroll 60s linear infinite;
    width: calc(400px * 14);
  }

  .slider .slide {
    width: 400px;
  }

  .slider .slide img {
    width: 100%;
    height: 60vh;
    object-fit: cover;
  }

  .slider .slide img:hover {
    transform: scale(1.1);
    transition: all 0.3s ease-in-out;
  }

  @keyframes scroll {
    0% {
      -webkit-transform: translateX(0);
      transform: translateX(0);
    }

    100% {
      -webkit-transform: translateX(calc(-400px * 7));
      transform: translateX(calc(-400px * 7));
    }
  }
</style>
