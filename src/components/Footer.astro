---
import { Image } from "astro:assets";
import logo from "@/assets/images/logo.png";
import pixelFox from "@/assets/images/logoPF.png";
import { Icon } from "astro-icon/components";
---

<footer class="min-h-[50vh] flex items-center justify-center flex-col pb-24">
  <div class="lg:hidden bg-white h-56"></div>
  <div
    class="text-white text-lg max-w-screen-xl w-full grid grid-cols-1 lg:grid-cols-3 mt-24 m-0"
  >
    <div class="text-center lg:text-left">
      <h2 class="text-2xl font-bold">Visitanos en</h2>
      <p class="text-2xl mb-4">
        Tunja Boyacá<p>
          <div class="text-center flex gap-4 flex-col">
            <p class="flex justify-center lg:justify-normal gap-4">
              <Icon name="Locate" class="w-6 h-6" />
              Calle 19 # 10 - 2A
            </p>
            <a
              href="mailto:roymarquezangarita@gmail.com"
              class="flex justify-center lg:justify-normal gap-4"
            >
              <Icon name="Email" class="w-6 h-6" />
              roymarquezangarita@gmail.com
            </a>
            <a
              href="tel:3103821457"
              class="flex justify-center lg:justify-normal gap-4"
            >
              <Icon name="Phone" class="w-6 h-6" />
              310 3821457
            </a>
          </div>
        </p>
      </p>
    </div>
    <div class="flex items-center justify-center">
      <Image src={logo} alt="logo" class="w-2/3" />
    </div>
    <div class="flex items-center px-8 flex-col w-full">
      <p class="text-2xl mb-4 text-center font-bold">
        Siguenos en nuestas redes sociales
      </p>
      <div class="flex gap-8 text-4xl">
        <a
          href="htpp: // www.facebook.com/VirtualArt"
          target="_blank"
          class="text-white hover:text-blue-950 hover:bg-white transition-all ease-in-out duration-200 p-2 rounded-md"
        >
          <Icon name="facebook" class="" />
        </a>
        <a
          href="https://www.instagram.com/virtual_art1/"
          target="_blank"
          class="text-white hover:text-blue-950 hover:bg-white transition-all ease-in-out duration-200 p-2 rounded-md"
        >
          <Icon name="instagram" class="" />
        </a>
        <a
          href="https://www.tiktok.com/@roymarquezangarit"
          target="_blank"
          class="text-white hover:text-blue-950 hover:bg-white transition-all ease-in-out duration-200 p-2 rounded-md"
        >
          <Icon name="tiktok" class="" />
        </a>
      </div>
    </div>
  </div>
</footer>
<div class="flex justify-center items-center bg-white gap-4">
  <p class="text-sm">© 2024, Powered by PixelFox</p>
  <Image src={pixelFox} alt="PixelFox" class="w-8 h-8" />
</div>

<style>
  footer {
    background-color: #0f1341;
    background-position: center top;
    background-size: contain;
    background-clip: content-box;
    background-repeat: no-repeat;
  }
  @media (max-width: 768px) {
    footer {
      background-image: url("../assets/images/wave.svg");
    }
  }
  /* background-image: url("../assets/images/wave.svg"); */
</style>
