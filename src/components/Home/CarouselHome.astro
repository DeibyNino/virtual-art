---
import Carousel from "../Utilities/Carousel.astro";
---

<div class="mt-12 py-16 bg-white text-gray-900">
  <div>
    <h2 class="text-4xl font-bold text-center">
      Conoce algunas de nuestras piezas
    </h2>
  </div>
  <div class="py-8">
    <Carousel />
  </div>
  <div class="flex flex-col items-center">
    <h2 class="text-4xl font-bold text-center">Ve a la galeria para ver mas</h2>
    <a
      href="/galeria"
      class="bg-indigo-900 transition-all ease-in-out duration-200 text-white font-bold px-6 py-2 rounded-lg mt-4 inline-block hover:bg-indigo-800"
      >Ir a galeria</a
    >
  </div>
</div>
